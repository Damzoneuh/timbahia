{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Admin-Agenda{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="row mt-5 mb-5">
        <div class="col-12 text-center mt-5"><a href="{{ path('admin') }}" class="btn btn-group btn-primary">Retout à l'admin</a> </div>
        <div class="col-12 mt-5 ">
            <div class="p-5 bg-footer shadow rounded text-white mb-5">
                <table class="table table-striped table-responsive-sm text-white">
                    <thead>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Nom / Prénom</th>
                            <th scope="col">Surnom</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td><a href="{{ path('super_admin_users', {id: user.id}) }}" class="text-white">{{ user.email }}</a></td>
                                <td>{{ user.profile ? user.profile.name : '' }} {{ user.profile ? user.profile.lastName : '' }}</td>
                                <td>{{ user.profile ? user.profile.nickName : '' }}</td>
                                <td>
                                    <a href="{{ path('super_admin_delete_user', {id: user.id}) }}" class="btn btn-group btn-danger">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}