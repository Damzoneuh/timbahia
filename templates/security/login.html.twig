{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Login{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid bg-white mt-5">
        <div class="row">
            <div class="col-sm-12 col-md-6 offset-md-3">
                <div class="p-5 rounded shadow bg-light">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes déjà connecté : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                            </div>
                        {% endif %}

                            <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                            <label for="inputPassword" class="mt-4">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            <div class="checkbox mb-3 mt-4">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>

                            <div class="text-center">
                                <button class="btn btn-lg btn-primary" type="submit">
                                    Envoyer
                                </button>
                            </div>
                        <div class="text-center">
                            <a href="{{ path('register') }}" title="créer un compte" class="btn btn-group btn-outline-success mt-5">
                                Pas encore de compte ?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}